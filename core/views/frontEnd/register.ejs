<div class="container">
    <div class="col-xs-12">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="name" class="control-label col-xs-4">Name</label>

                <div class="col-xs-12 col-sm-8">
                    <input type="text" id="name" placeholder="placeholder text" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="control-label col-xs-4">Email</label>

                <div class="col-xs-12 col-sm-8">
                    <input type="email" id="email" placeholder="placeholder text" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="phone" class="control-label col-xs-4">Phone</label>

                <div class="col-xs-12 col-sm-8">
                    <input type="text" id="phone" class="form-control" data-inputmask="'mask' : '(999) 999-9999'">
                </div>
            </div>
            <div class="form-group">
                <label for="pass" class="control-label col-xs-4">Password</label>

                <div class="col-xs-12 col-sm-8">
                    <input type="password" id="pass" placeholder="placeholder text" class="form-control" autocomplete="off">
                </div>
            </div>
            <div class="form-group">
                <label for="rep_pass" class="control-label col-xs-4">Repeat Password</label>

                <div class="col-xs-12 col-sm-8">
                    <input type="password" id="rep_pass" placeholder="placeholder text" class="form-control">
                </div>
            </div>

            <button role="button" class="btn btn-success col-xs-offset-6" id="send">Submit</button>
        </div>

    </div>
</div>
